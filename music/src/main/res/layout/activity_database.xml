<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:collapseColumns="4"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        >
        <TableRow>
             <TextView android:id="@+id/id"
                 android:text="id"
                 android:textSize="25sp"
                 android:textColor="@color/colorAccent"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:gravity="center"
                 >
             </TextView>
            <TextView android:id="@+id/name"
                android:text="name"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                >
            </TextView>
            <TextView android:id="@+id/age"
                android:text="age"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                >
            </TextView>
            <TextView android:id="@+id/describe"
                android:text="describe"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                >
            </TextView>
        </TableRow>
        <TableRow
            android:id="@+id/tab1"
            android:visibility="gone"
            >
            <TextView android:id="@+id/stu1_id"
                android:text="1"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                >
            </TextView>
            <TextView android:id="@+id/stu1_name"
                android:text="邵琦"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                >
            </TextView>
            <TextView android:id="@+id/stu1_age"
                android:text="23"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                >
            </TextView>
            <TextView android:id="@+id/stu1_describe"
                android:text="年轻人"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                >
            </TextView>
        </TableRow>
        <TableRow
            android:id="@+id/tab2"
            android:visibility="gone"
            >
            <TextView android:id="@+id/stu2_id"
                android:text="2"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                >
            </TextView>
            <TextView android:id="@+id/stu2_name"
                android:text="王二小"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                >
            </TextView>
            <TextView android:id="@+id/stu2_age"
                android:text="8"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                >
            </TextView>
            <TextView android:id="@+id/stu2_describe"
                android:text="小孩子"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                >
            </TextView>
        </TableRow>
        <TableRow
            android:id="@+id/tab3"
            android:visibility="gone"
            >
            <TextView android:id="@+id/stu3_id"
                android:text="3"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                >
            </TextView>
            <TextView android:id="@+id/stu3_name"
                android:text="袁隆平"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                >
            </TextView>
            <TextView android:id="@+id/stu3_age"
                android:text="65"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                >
            </TextView>
            <TextView android:id="@+id/stu3_describe"
                android:text="老年人"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                >
            </TextView>
        </TableRow>
    </TableLayout>
    <Button
        android:id="@+id/add_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text="添加数据"
        android:layout_centerInParent="true"
        />
    <Button
        android:id="@+id/modify_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text="修改数据"
        android:layout_centerInParent="true"
        android:layout_below="@id/add_data"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/delete_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text="删除数据"
        android:layout_centerInParent="true"
        android:layout_below="@id/modify_data"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/query_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text="查询数据"
        android:layout_centerInParent="true"
        android:layout_below="@id/delete_data"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>
